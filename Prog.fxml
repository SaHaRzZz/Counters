<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main">
   <children>
      <Pane prefHeight="275.0" prefWidth="200.0">
         <children>
            <Button fx:id="threeType" layoutY="20.0" mnemonicParsing="false" onAction="#threeTypeAction" prefHeight="90.0" prefWidth="200.0" text="3 סוגים" />
            <Button fx:id="eightType" layoutY="110.0" mnemonicParsing="false" onAction="#eightTypeAction" prefHeight="90.0" prefWidth="200.0" text="10 סוגים" />
            <HBox layoutY="200.0" prefHeight="62.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <MenuButton fx:id="monthBox" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="108.0" text="חודש" textOverrun="CLIP">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#januaryMenu" text="ינואר" />
                            <MenuItem mnemonicParsing="false" onAction="#februaryMenu" text="פברואר" />
                              <MenuItem mnemonicParsing="false" onAction="#marchMenu" text="מרץ" />
                              <MenuItem mnemonicParsing="false" onAction="#aprilMenu" text="אפריל" />
                              <MenuItem mnemonicParsing="false" onAction="#mayMenu" text="מאי" />
                              <MenuItem mnemonicParsing="false" onAction="#juneMenu" text="יוני" />
                              <MenuItem mnemonicParsing="false" onAction="#julyMenu" text="יולי" />
                              <MenuItem mnemonicParsing="false" onAction="#augustMenu" text="אוגוסט" />
                              <MenuItem mnemonicParsing="false" onAction="#septemberMenu" text="ספטמבר" />
                              <MenuItem mnemonicParsing="false" onAction="#octoberMenu" text="אוקטובר" />
                              <MenuItem mnemonicParsing="false" onAction="#novemberMenu" text="נובמבר" />
                              <MenuItem mnemonicParsing="false" onAction="#decemberMenu" text="דצמבר" />
                          </items>
                        </MenuButton>
                        <TextField fx:id="directionBox" alignment="CENTER" layoutX="10.0" layoutY="10.0" promptText="לכיוון/מכיוון" />
                        <TextField fx:id="amountBox" alignment="CENTER" layoutX="10.0" layoutY="35.0" promptText="כמות ספירה" />
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField fx:id="cityBox" alignment="CENTER" promptText="עיר" />
                        <TextField fx:id="numBox" alignment="CENTER" layoutX="10.0" layoutY="10.0" promptText="שם/מס' צומת" />
                        <TextField fx:id="nameBox" alignment="CENTER" layoutX="10.0" layoutY="35.0" promptText="שם מבצע" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Text fill="#4800ff" layoutY="18.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Made by: Sahar Hayun | Version: 6" textAlignment="CENTER" wrappingWidth="200.0" />
         </children>
      </Pane>
   </children>
</AnchorPane>
